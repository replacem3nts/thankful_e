<% if user_logged_in == @user %>
    <h2>My Thanks</h2>
    <ul>
        <% @posts.each do |p| %>
            <li>
                <span><%= link_to p.title, post_path(p) %><br>
                <%= truncate(p.content, length: 75)%></span>
                <span id="likes_count"><%= "🙏 #{p.likes_count}" %></span>
            </li>
        <% end %>
    </ul>
<% else %>
    <p>You don't have permission to view this user's posts</p>
    <% link_to "Back to all Thanks", posts_path %>
<% end %>