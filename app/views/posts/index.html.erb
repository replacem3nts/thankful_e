<%if @header %>
    <h2><%= @header %></h2>
<% else %>
    <h2>Thanks <%= @finder_name %></h2>
<% end %>
<%= render 'postnav' %>
<% if @posts.present? %>
<ul>
    <% @posts.each do |p| %>
        <li>
            <span><%= link_to p.title, post_path(p) %><br>
            <%= truncate(p.content, length: 75)%></span>
            <span id="likes_count"><%= "🙏 #{p.likes_count}" %></span>
        </li>
    <% end %>
</ul>
<% else %>
    <p>Sorry, there are no thanks in <%= @finder_name %> </p>
<% end %>