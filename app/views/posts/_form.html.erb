<%= form_for(post) do |p| %>
    <%= p.label :private, "Would you like this post to be:"%>
    <%= p.radio_button :private, false, checked: true %>
    <%= p.label :private_false, "Public" %>
    <%= p.radio_button :private, true %>
    <%= p.label :private_true, "Private" %><br><br>
    <%= p.label :title %>
    <%= p.text_field :title %><br><br>
    <%= p.label :content %>
    <%= p.text_area :content %><br><br>
    <%= p.label :location_id, "Location"%>
    <%= p.collection_select :location_id, locations, :id, :state %><br><br>
    <%= p.label :category_name, "Category"%>
    <%= p.text_field :category_name %>
    <%= p.submit "Submit Thanks!"%>
<% end %>